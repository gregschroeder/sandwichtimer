{
  "name": "sandwichtimer",
  "version": "1.1.0",
  "description": "Timer app controllable via CLI",
  "build": {
    "appId": "com.vitorgalvao.sandwichtimer",
    "productName": "SandwichTimer",
    "mac": {
      "target": "zip",
      "icon": "../icon/icon.icns",
      "extendInfo": {
        "LSUIElement": 1,
        "NSUserNotificationAlertStyle": "alert"
      }
    }
  },
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "build": "npm run build-macos",
    "build-macos": "electron-builder --dir",
    "package": "npm run package-macos",
    "package-macos": "electron-builder",
    "lint": "eslint .",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitorgalvao/sandwichtimer.git"
  },
  "keywords": [
    "electron",
    "pomodoro",
    "timer"
  ],
  "author": "Vítor Galvão",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/vitorgalvao/sandwichtimer/issues"
  },
  "homepage": "https://github.com/vitorgalvao/sandwichtimer",
  "devDependencies": {
    "electron": "^5.0.1",
    "electron-builder": "^20.40.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "airbnb-base"
    ],
    "rules": {
      "func-names": [
        "error",
        "never"
      ],
      "max-len": [
        "error",
        {
          "code": 160
        }
      ],
      "lines-between-class-members": "off",
      "import/no-extraneous-dependencies": [
        "error"
      ],
      "import/extensions": [
        "error",
        "always",
        {
          "js": "never"
        }
      ],
      "indent": [
        "error",
        2,
        {
          "FunctionDeclaration": {
            "parameters": "first"
          },
          "FunctionExpression": {
            "parameters": "first"
          },
          "SwitchCase": 1
        }
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js"
          ]
        }
      }
    },
    "parserOptions": {
      "parser": {
        "ecmaVersion": 6
      }
    }
  }
}
